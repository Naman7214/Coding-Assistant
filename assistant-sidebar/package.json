{
  "name": "assistant-sidebar",
  "displayName": "Assistant Sidebar",
  "description": "An assistant sidebar extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/assistant-sidebar.git"
  },
  "publisher": "example-publisher",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension_streaming.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "assistant-sidebar",
          "title": "Assistant",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "assistant-sidebar": [
        {
          "type": "webview",
          "id": "assistantView",
          "name": "Assistant"
        }
      ]
    },
    "commands": [
      {
        "command": "assistant-sidebar.sendQuery",
        "title": "Send Query to Assistant"
      },
      {
        "command": "assistant-sidebar.startAgentServer",
        "title": "Start Agent Server"
      },
      {
        "command": "assistant-sidebar.startStreamingServer",
        "title": "Start Streaming Agent Server"
      },
      {
        "command": "assistant-sidebar.refreshConnection",
        "title": "Refresh Agent Connection"
      },
      {
        "command": "assistant-sidebar.showOutput",
        "title": "Show Agent Output"
      },
      {
        "command": "assistant-sidebar.askAgent",
        "title": "Ask Agent"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "cd webview-ui && npm install && npm run build",
    "dev-webview": "cd webview-ui && npm run dev"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "axios": "^1.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1"
  }
}
